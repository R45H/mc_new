mixin member(data)
	.member

		.member__wrap

			.member__img-wrap
				.member__img(
					style='background-image: url(' + (data.img || 'img/content/no-photo.png') + ');'
					role='img'
					aria-label= data.img ? data.name : 'Нет фото'
					title= data.img ? data.name : 'Нет фото'
				)

			.member__name= data.name

		a.link.member__link(
			href= data.link
			target='_blank'
			rel='nofollow'
		)= data.link_text