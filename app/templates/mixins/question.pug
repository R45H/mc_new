include ../mixins/radio

mixin question(data)
	.question(class= attributes.class)
		.row

			.col-md-5.order-md-1.main__space-bot
				.question__img(
					style='background-image: url(' + data.img + ');'
					role='img'
				)

			.col-md-7
				.title.title_tight.title_sm.title_lower.main__space-bot.question__title= data.title
				.question__radio-wrap.main__space-bot

					each val in data.radio
						+radio(val)(class='question__radio')

