include ../components/logo
include ../components/toggle

// HEADER
header.header
	.header__wrap
		.header__row

			.header__col.header__col_fixed
				+logo(class='header__logo')

			.header__col.header__col_flex
				ul.header__menu

					each val in g_menu
						li.header__menu-item

							if (val.link === page.link)
								span.header__menu-link
									span.header__menu-text= val.name
							else
								a.header__menu-link(href= val.link)
									span.header__menu-text= val.name

	.header__toggle-wrap
		+toggle