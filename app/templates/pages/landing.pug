.section.section_up.section_full.section_valign_center.section_space-top_header-2x.section_space-bot_2x.section_fog_dark.section_gradient_darkblue(style='background-image: url(img/content/section/01.jpg); background-position: 75% 0;')
	.container.text-center.z-index-1
		h1.title.title_color_white.main__space-bot
